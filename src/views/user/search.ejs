<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../shared/user/styles.ejs %>
  </head>

  <body>
    <!-- HEADER -->
    <% include ../shared/user/header.ejs %>
    <!-- /HEADER -->
    <% include ../shared/user/breadcrumb.ejs %>
    <!-- /BREADCRUMB -->
    <div id="vide">
      <div class="container">
        <div class="banner-info">
          <div class="dump-height"></div>
        </div>
      </div>
    </div>
    <!-- SECTION -->
    
    <div class="product">
      <div class="container">
        <div class="spec">
          <h3>Kết Quả Tìm Kiếm Cho Từ Khoá: <span style="color: #18bc9b; font-family: 'EB Garamond', serif;"><%= title %></span></h3>
          <div class="ser-t">
            <b></b>
            <span style="background-color: #fbfeff;"><i></i></span>
            <b class="line"></b>
          </div>
        </div>
    <div class="con-w3l agileinf">
      <%if(products.length < 1){%>
      <div>
        <h1 style="margin-bottom: 1em; text-align: center;">
          Không tìm thấy sản phẩm liên quan!
        </h2>
      </div>
      <%} else { products.forEach(item => { %>
        <div class="col-md-3 pro-1">
          <div class="col-m fixed-height">
            <a href="/<%= item.slug %>" class="offer-img">
              <img
                data-src="<%= item.image %> "
                class="img-responsive img-110 lazy-image"
                alt="<%= item.name %>"
                title="<%= item.name %>"
              />
            </a>
            <div class="mid-1">
              <div class="women">
                <h6>
                  <a href="/<%= item.slug %>">
                    <% if (item.name.split(" ").length > 15) { %> <%=
                    item.name.slice(0, 100) %> ... <% } else { %> <%=
                    item.name %> <% } %>
                  </a>
                </h6>
              </div>
              <% if (item.categories.id !== 12){ %>
              <div class="pr-single">
                <p class="reduced">
                  Giá: Liên Hệ
                </p>
              </div>
              <% if (item.provider.id !== 26) { %>
              <p>
                <strong>Thương hiệu: </strong>
                <a
                  href="/<%= item.product_type.slug %>/<%= item.categories.slug %>/<%= item.provider.slug %>"
                  ><%= item.provider.name %></a
                >
              </p>
              <% } %>
              <p>
                <strong>Danh mục:</strong>
                <a
                  href="/<%= item.product_type.slug %>/<%= item.categories.slug %>"
                  ><%= item.categories.name %></a
                >
              </p>
              <p>
                <strong>Loại:</strong>
                <a href="/<%= item.product_type.slug %>"
                  ><%= item.product_type.name %></a
                >
              </p>
              <% } else { %>
              <div style="margin-top: 1.5em;"></div>
              <p>
                <strong>Đăng lúc:</strong>
                 <%= item.createdAt.toLocaleString() %>
              </p>
              <p>
                <strong>Danh mục:</strong>
                <%= item.categories.name %>
              </p>
              <% } %>
            </div>
          </div>
        </div>
      <%})}%>
      <div class="clearfix"></div>
    <% include ../shared/user/paginate.ejs %>
    </div>
  </div>
</div>

    <!-- /Section -->

    <!-- FOOTER -->
    <% include ../shared/user/footer.ejs %>
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <% include ../shared/user/scripts.ejs %>
    <!-- jQuery Plugins -->
  </body>
</html>
